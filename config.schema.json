{
  "pluginAlias": "ADTPlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "ADT Panel"
      },
      "api-key": {
        "title": "api-key",
        "description": "panel name",
        "type": "string"
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "required": true,
        "items": {
          "deviceName": {
            "title": "Device Name",
            "type": "string"
          },
          "deviceid": {
            "title": "Device ID",
            "type": "string"
          }
        }
      }
    }
  }
}