{
  "pluginAlias": "ADTPlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "ADT Panel"
      },
      "api-key": {
        "title": "api-key",
        "description": "panel name",
        "type": "string",
        "required": true
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "required": true,
        "items": {
            "type": "object",
            "properties": {
              "deviceName": {
                "title": "Device Name",
                "type": "string",
                "required": true
              },
              "deviceid": {
                "title": "Device ID",
                "type": "string",
                "required": true
              }
            }
        }
      }
    }
  }
}